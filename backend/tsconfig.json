{
  "compilerOptions": {
    /* Project Structure */
    "rootDir": "src",
    "outDir": "dist",

    /* Environment */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Output */
    "sourceMap": true,
    "declaration": false,

    /* Quality */
    "skipLibCheck": true
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}